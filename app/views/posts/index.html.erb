<h1>Posts#index</h1>
<%= link_to "New post", new_post_path %>
 <table>
    <thead>
    <tr >
        <th>title</th>
        <th>body</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    </thead>
    <tbody>
    <% @posts.each do |post| %>
        <tr>
        <td ><p><%= post.title %></p></td>
        <td ><p><%= post.body %></p></td>
    
        <td><%= link_to "Edit", edit_post_path(post) ,class: "material-symbols-outlined"%></td>
        <td><%= button_to "delete" , post , method: :delete ,class: "material-symbols-outlined symbols_delete"%></td>
        </tr>
    <% end %>
    </tbody>
</table>